
    <div class="col-8 bg-2 overflow-auto p-0">
      <main class="bg-1 position-absolute w-100 p-5">

        <%= image_tag user_cover(current_user), size: "600x200" %>

        <h1> Write a review </h1>
        <%= render 'form', opinion: @opinion %>

        <h1>Opinions</h1>
        <table>
          <thead>
            <tr>
              <th>Content</th>
              <th>User</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @opinions.each do |opinion| %>
              <tr>
                <td><%= opinion.text %></td>
                <td><%= opinion.author.email %></td>
                <td><%= link_to 'Show', opinion %></td>
                <td><%= link_to 'Edit', edit_opinion_path(opinion) %></td>
                <td><%= link_to 'Destroy', opinion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <br>
        <%= link_to 'New Opinion', new_opinion_path %>
      </main>
    </div>
    <div class="col-4 bg-4 overflow-auto p-0">
      <aside class="bg-2 position-absolute w-100 p-5">
        <h1>Who to follow</h1>
        <ul>
        <% @whotofollow.each do |user| %>
          <li><%= link_to user.email, user %></li>
        <% end %>
        </ul>
        <h2>People you follow</h2>
        <ul>
        <% @whoifollow.each do |user| %>
          <li><%= link_to user.email, user %></li>
        <% end %>
        </ul>
      </aside>
    </div>
