
    <div class="col-8 overflow-auto p-0">
      <%= image_tag user_cover(current_user), size: "600x200", class: "cover-image" %>

      <main class="position-absolute w-100 p-5">

        <div class="container">
          <div class="row pb-5">
            <div class="col-12 bg-white border rounded">
              <div class="p-3">
              <h5 class="text-uppercase font-weight-bold text-secondary">Review an app</h5>
              <%= render 'form', opinion: @opinion %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12 bg-white border rounded">
              <h1>Opinions</h1>
              <table>
                <thead>
                  <tr>
                    <th>Content</th>
                    <th>User</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @opinions.each do |opinion| %>
                    <tr>
                      <td><%= opinion.text %></td>
                      <td><%= opinion.author.email %></td>
                      <td><%= link_to 'Show', opinion %></td>
                      <td><%= link_to 'Edit', edit_opinion_path(opinion) %></td>
                      <td><%= link_to 'Destroy', opinion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>
    <div class="col-4 overflow-auto p-0">
      <aside class="position-absolute w-100 p-5">
        <h1>Who to follow</h1>
        <ul>
        <% @whotofollow.each do |user| %>
          <li><%= link_to user.email, user %></li>
        <% end %>
        </ul>
        <h2>People you follow</h2>
        <ul>
        <% @whoifollow.each do |user| %>
          <li><%= link_to user.email, user %></li>
        <% end %>
        </ul>
      </aside>
    </div>
