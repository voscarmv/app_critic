
    <div class="col-8 overflow-auto p-0">

      <main class="position-absolute w-100 p-5">
        <div class="container">
          <div class="row">
            <div class="col-12 bg-white border rounded">
              <div class="p-3">
                <h5 class="text-uppercase font-weight-bold text-secondary">Opinions about <%= @app.name %></h5>

                <% @app.opinions.each do |opinion| %>


                  <div class="container-fluid p-0">
                    <div class="row pb-5">
                      <div class="col-1">
                        <%= image_tag user_avatar(opinion.author, 50) %>
                      </div>
                      <div class="col-11 pl-4">
                        <div class="row">
                          <div class="col-12"><%= link_to opinion.author.username, opinion.author %> <% if opinion.app %> rated <%= link_to opinion.app.name, opinion.app %><% end %></div>
                        </div>
                        <div class="row">
                          <div class="col-12">Opinion: <%= opinion.sentiment ? "Positive" : "Negative" %></div>
                        </div>
                        <div class="row">
                          <div class="col-12"><%= opinion.text %></div>
                        </div>
                      </div>
                    </div>
                  </div>

                <% end %>

              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
    <div class="col-4 overflow-auto p-0">
    
      <aside class="position-absolute w-100 p-3">
        <h5 class="text-uppercase font-weight-bold text-secondary"><%= @app.name %></h5>
        <div class="container-fluid pb-4">
          <div class="row">
            <div class="col-6 flex-column justify-content-center text-center p-2">
            <div class="text-uppercase font-weight-bold text-secondary">Positive</div><div class="text-success"><%= @app.positive %> %</div>
            </div>
            <div class="col-6 flex-column justify-content-center text-center p-2">
            <div class="text-uppercase font-weight-bold text-secondary">Negatve</div><div class="text-danger"><%= @app.negative %> %</div>
            </div>
          </div>
        </div>

      </aside>
    </div>

