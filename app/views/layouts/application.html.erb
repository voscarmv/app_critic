<!DOCTYPE html>
<html>
  <head>
    <title>AppCritic</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

  <div class="container-fluid bg-1 d-flex h-100 flex-column">
    <div class="row bg-2 flex-fill d-flex justify-content-start">
      <div class="col-2 bg-3">
        <aside>
          <% if current_user %>
            <%= image_tag user_avatar(current_user, 100), class: "rounded-circle" %>
            <%= current_user.email %>
          <% end %>
        </aside>
      </div>
      <div class="col-10 bg-1 d-flex h-100 flex-column">
        <div class="row bg-5">
          <div class="col-12 bg-6">
            <nav>
              <ul>
              <% if user_signed_in? %>
                <li>
                  <%= link_to "Change your password", edit_user_registration_path %>
                </li>
                <li>
                  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
                </li>
              <% else %>
                <li>
                  <%= link_to('Login', new_user_session_path) %>  
                </li>
              <% end %>
              </ul>
              <p class="notice"><%= notice %></p>
              <p class="alert"><%= alert %></p>
            </nav>
          </div>
        </div>
        <div class="row bg-6 flex-fill d-flex justify-content-start">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>
